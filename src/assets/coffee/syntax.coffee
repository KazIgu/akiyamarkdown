    varWordMapper = @createKeywordMapper({}, 'invalid', false, ' ')
    @$rules =
      'start': [
        {
          token: 'title'
          regex: /【(.*?)】/
        }
        {
          token: 'subtitle'
          regex: /■(.*)/
        }
        {
          token: 'smalltitle'
          regex: /・(.*)/

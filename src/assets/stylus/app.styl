@import './core/_import'
@import './block/*'

@font-face 
  font-family 'Ricty'
  src local('Ricty-Regular')

html, body
  overflow hidden
  letter-spacing 0

#header
  width 100%
  height 40px
  background black
  position relative
  overflow-x scroll
  .tabs
    display table
    height 40px
    .tab
      background black
      display table-cell
      height 40px
      width 100px
      min-width 80px
      position relative
      color #aaa
      font-size 12px
      line-height 40px
      white-space nowrap
      &:before
        content attr(data-title)
        display inline-block
        margin 0 30px 0 15px
      &.is-active
        background #272822
      .close
        position absolute
        right 10px
        top 50%
        transform translateY(-50%)
        color #aaa
        font-size 22px
        cursor default
        display inline-block
        width 18px
        height @width
        border-radius 10px
        text-align center
        line-height @width
        &:hover
          background #aaa
          color #272822

#editor
  width 100%
  height calc(100vh - 40px)
  letter-spacing 0
  font 14px/normal 'Ricty', 'Monaco', 'Menlo', 'Ubuntu Mono', 'Consolas', 'source-code-pro', monospace
  background #272822

#editor .editor
  width 100%
  height calc(100vh - 40px)
  letter-spacing 0
  font 14px/normal 'Ricty', 'Monaco', 'Menlo', 'Ubuntu Mono', 'Consolas', 'source-code-pro', monospace
  position absolute
  bottom 0
  left 0
  &.is-active
    z-index 99999


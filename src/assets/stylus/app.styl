@import './core/_import'
@import './block/*'

@font-face 
  font-family 'Ricty'
  src local('Ricty-Regular')

html, body
  overflow hidden
  letter-spacing 0

#editor
  width 100%
  height 100vh
  letter-spacing 0
  font 14px/normal 'Ricty', 'Monaco', 'Menlo', 'Ubuntu Mono', 'Consolas', 'source-code-pro', monospace

.ace-monokai
  .ace_title
    color #70aacc

  .ace_subtitle
    color #fd9a41

  .ace_smalltitle
    color #b6d971

  .ace_indent
    color #aaaaaa
